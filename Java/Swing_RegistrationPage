import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class RegistrationForm extends JFrame {

    // Declare components
    private JTextField nameField, classField, rollNoField, sectionField, addressField;
    private JLabel nameLabel, classLabel, rollNoLabel, sectionLabel, addressLabel, amountLabel;
    private JButton submitButton;

    // Constructor to set up the UI
    public RegistrationForm() {
        // Set up the frame
        setTitle("Registration Form");
        setSize(400, 400);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        // Set up the panel and layout
        JPanel panel = new JPanel();
        panel.setLayout(new GridLayout(7, 2, 10, 10));
        getContentPane().add(panel);

        // Initialize labels
        nameLabel = new JLabel("Name:");
        classLabel = new JLabel("Class:");
        rollNoLabel = new JLabel("Roll No:");
        sectionLabel = new JLabel("Section:");
        addressLabel = new JLabel("Address:");
        amountLabel = new JLabel("Amount to Pay: Rs. 1200");

        // Initialize text fields
        nameField = new JTextField();
        classField = new JTextField();
        rollNoField = new JTextField();
        sectionField = new JTextField();
        addressField = new JTextField();

        // Initialize submit button
        submitButton = new JButton("Submit");

        // Add components to panel
        panel.add(nameLabel);
        panel.add(nameField);
        panel.add(classLabel);
        panel.add(classField);
        panel.add(rollNoLabel);
        panel.add(rollNoField);
        panel.add(sectionLabel);
        panel.add(sectionField);
        panel.add(addressLabel);
        panel.add(addressField);
        panel.add(new JLabel());  // Empty label to fill grid
        panel.add(amountLabel);
        panel.add(submitButton);

        // Add ActionListener to the submit button
        submitButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                String name = nameField.getText();
                String className = classField.getText();
                String rollNo = rollNoField.getText();
                String section = sectionField.getText();
                String address = addressField.getText();

                // Display confirmation message
                JOptionPane.showMessageDialog(null,
                        "Registration successful!\n\n" +
                        "Name: " + name + "\n" +
                        "Class: " + className + "\n" +
                        "Roll No: " + rollNo + "\n" +
                        "Section: " + section + "\n" +
                        "Address: " + address + "\n\n" +
                        "Amount to be paid: Rs. 1200", "Confirmation", JOptionPane.INFORMATION_MESSAGE);
            }
        });
    }

    public static void main(String[] args) {
        // Create and show the registration form
        SwingUtilities.invokeLater(new Runnable() {
            @Override
            public void run() {
                new RegistrationForm().setVisible(true);
            }
        });
    }
}
